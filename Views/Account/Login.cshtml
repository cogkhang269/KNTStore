<body class="trangDangNhap-body">
    <div class="trangDangNhap-container">

        <div class="trangDangNhap-right">
            <h2 class="trangDangNhap-form-title">
                <img src="~/ass/icon/x512.png" alt="TRANG CHỦ" class="trangDangNhap-close-btn" />
            </h2>
            <form method="post" action="/Account/Login" id="trangDangNhap-form">
                <div class="trangDangNhap-form-group">
                    <div class="trangDangNhap-input-group-username">
                        <input type="text" id="email" name="email" class="trangDangNhap-input" 
                               placeholder="Nhập email hoặc số điện thoại" required />
                    </div>
                </div>

                <div class="trangDangNhap-form-group">
                    <div class="trangDangNhap-input-group-password">
                        <input type="password" id="password" name="password" class="trangDangNhap-input" 
                               placeholder="Nhập mật khẩu" required />
                    </div>
                </div>

                <div class="trangDangNhap-options">
                    <label class="trangDangNhap-remember">
                        <input type="checkbox" name="remember" />
                        Ghi nhớ đăng nhập
                    </label>
                    <a href="#" class="trangDangNhap-forgot">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="trangDangNhap-btn">
                    <i class="fas fa-sign-in-alt" style="margin-right: 8px;"></i>
                    Đăng nhập
                </button>
            </form>

            <div class="trangDangNhap-divider">
                <span>Hoặc đăng nhập bằng</span>
            </div>

            <div class="trangDangNhap-social">
                <a href="#" class="trangDangNhap-social-btn">
                    <i class="fab fa-google"></i>
                    <span>Google</span>
                </a>
                <a href="#" class="trangDangNhap-social-btn">
                    <i class="fab fa-facebook-f"></i>
                    <span>Facebook</span>
                </a>
            </div>

            <div class="trangDangNhap-register">
                Chưa có tài khoản? <a href="/Account/Register">Đăng ký ngay</a>
            </div>
        </div>
    </div>

